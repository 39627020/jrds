<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE graphdesc PUBLIC "-//jrds//DTD Graph Description//EN" "urn:jrds:graphdesc">
<graphdesc>
	<name>LinuxDiskstatSize</name>
	<graphName>bsize-{2}</graphName>
	<graphTitle>Average requeste size on disk {2} on {1}</graphTitle>
	<verticalLabel>bytes</verticalLabel>
	<add>
		<name>r</name>
	</add>
	<add>
		<name>w</name>
	</add>
	<add>
		<name>rsec</name>
	</add>
	<add>
		<name>wsec</name>
	</add>
	<add>
		<name>diskIOBLKRSZ</name>
		<graphType>line</graphType>
		<rpn>rsec, 512, *, r, /</rpn>
		<color>green</color>
		<legend>Average request size on read</legend>
	</add>
	<add>
		<name>diskIOBLKWSZ</name>
		<graphType>line</graphType>
		<rpn>wsec, 512, *, w, /</rpn>
		<color>blue</color>
		<legend>Average request size on write</legend>
	</add>
	<hosttree>
		<pathelement>HOST</pathelement>
		<pathelement>DISK</pathelement>
		<pathelement>DISKACTIVITY</pathelement>
		<pathelement>INDEX</pathelement>
		<pathstring>Average requeste size</pathstring>
	</hosttree>
	<viewtree>
		<pathelement>DISK</pathelement>
		<pathelement>DISKACTIVITY</pathelement>
		<pathelement>HOST</pathelement>
		<pathstring>Average requeste size</pathstring>
		<pathelement>INDEX</pathelement>
	</viewtree>
</graphdesc>
