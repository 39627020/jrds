<project xmlns="http://maven.apache.org/POM/4.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0   
    http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>fr.jrds</groupId>
    <artifactId>jrds</artifactId>
    <packaging>war</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>${project.artifactId} ${project.version}</name>
    <url>http://jrds.fr</url>
    <properties>
        <!-- The project should have a source encoding set. -->
        <project.build.sourceEncoding>ISO8859-15</project.build.sourceEncoding>
        <buildSource>1.7</buildSource>
        <buildTarget>1.7</buildTarget>
        <!-- current year. -->
        <year>2014</year>
        <dojo.version>1.9.3</dojo.version>
        <dojo.unpacked.dir>${project.basedir}/target/dojo-unpacked</dojo.unpacked.dir>
        <webapp.root>${project.basedir}/web</webapp.root>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.rrd4j</groupId>
            <artifactId>rrd4j</artifactId>
            <version>2.3-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.17</version>
        </dependency>
        <dependency>
            <groupId>org.snmp4j</groupId>
            <artifactId>snmp4j</artifactId>
            <version>2.2.5</version>
        </dependency>
        <dependency>
            <groupId>org.snmp4j</groupId>
            <artifactId>snmp4j-agent</artifactId>
            <version>2.1.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json</artifactId>
            <version>20140107</version>
        </dependency>
        <dependency>
            <groupId>org.mortbay.jetty</groupId>
            <artifactId>jetty</artifactId>
            <version>6.1.26</version>
            <exclusions>
                <exclusion>
                    <artifactId>servlet-api</artifactId>
                    <groupId>org.mortbay.jetty</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.apache.xmlrpc</groupId>
            <artifactId>xmlrpc-server</artifactId>
            <version>3.1.3</version>
            <exclusions>
                <exclusion>
                    <artifactId>servlet-api</artifactId>
                    <groupId>javax.servlet</groupId>
                </exclusion>
            </exclusions>
        </dependency>       
        <dependency>
            <groupId>commons-net</groupId>
            <artifactId>commons-net</artifactId>
            <version>3.3</version>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>1.4</version>
        </dependency>
        <dependency>
            <groupId>commons-fileupload</groupId>
            <artifactId>commons-fileupload</artifactId>
            <version>1.3.1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpclient</artifactId>
            <version>4.3.3</version>
        </dependency>
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>5.1.30</version>
        </dependency>
        <dependency>
            <groupId>postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <version>8.4-702.jdbc4</version>
        </dependency>
        <dependency>
            <groupId>org.dojotoolkit</groupId>
            <artifactId>dojo</artifactId>
            <type>zip</type>
            <version>${dojo.version}</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mortbay.jetty</groupId>
            <artifactId>jetty-servlet-tester</artifactId>
            <version>6.1.26</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <artifactId>servlet-api</artifactId>
            <groupId>org.mortbay.jetty</groupId>
            <version>2.5-20081211</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.mortbay.jetty</groupId>
            <artifactId>jetty-management</artifactId>
            <version>6.1.26</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>joda-time</groupId>
            <artifactId>joda-time</artifactId>
            <version>2.3</version>
        </dependency>
        <dependency>
        	<groupId>org.glassfish.external</groupId>
        	<artifactId>opendmk_jmxremote_optional_jar</artifactId>
        	<version>1.0-b01-ea</version>
        	<scope>test</scope>
        </dependency>
    </dependencies>
    <repositories>
        <repository>
            <id>sonaytpe</id>
            <name>Sonatype's snapshots</name>
            <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
            <layout>default</layout>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots />
        </repository>
        <repository>
            <id>snmp4j</id>
            <url>https://oosnmp.net/dist/release</url>
        </repository>
        <repository>
            <id>jrds</id>
            <name>jrds Java Packages</name>
            <url>http://jrds.fr/maven2</url>
            <layout>default</layout>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots />
        </repository>
    </repositories>
    <build>
        <resources>
            <resource>
                <directory>desc</directory>
            </resource>
            <resource>
                <directory>dtd</directory>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>junit</directory>
                <includes>
                    <include>ressources/**/*</include>
                </includes>
            </testResource>
        </testResources>
        <finalName>jrds</finalName>
        <sourceDirectory>${project.basedir}/src</sourceDirectory>
        <testSourceDirectory>${project.basedir}/junit</testSourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpackDojo</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.dojotoolkit</groupId>
                                    <artifactId>dojo</artifactId>
                                    <!--<classifier>sources</classifier>-->
                                    <version>${dojo.version}</version>
                                    <type>zip</type>
                                    <outputDirectory>
                                        ${project.basedir}/target/dojo-unpacked/
                                    </outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <id>default-jar</id>
                        <configuration>
                            <excludes>
                                <!-- Exclude the converter and inspector from the default build. -->
                                <exclude>**/bootstrap/*</exclude>
                                <exclude>**/snmp/*</exclude>
                            </excludes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>boot</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <classifier>boot</classifier>
                            <includes>
                                <include>**/bootstrap/*</include>
                            </includes>
                            <archive>
                                <manifest>
                                    <mainClass>jrds.bootstrap.BootStrap</mainClass>
                                </manifest>
                                <manifestEntries>
                                    <!-- Resolves to the default jar file. -->
                                    <Class-Path>${project.build.finalName}.jar</Class-Path>
                                </manifestEntries>
                            </archive>
                        </configuration>
                    </execution>
                    <execution>
                        <id>snmpprobes</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <classifier>snmpprobes</classifier>
                            <includes>
                                <include>**/snmp/*</include>
                            </includes>
                        </configuration>
                    </execution>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <webXml>${webapp.root}/WEB-INF/web.xml</webXml>
                    <archiveClasses>true</archiveClasses>
                    <webResources>
                        <resource>
                            <directory>${webapp.root}</directory>
                        </resource>
                        <resrouce>
                            <directory>${dojo.unpacked.dir}/dojo-release-${dojo.version}</directory>
                            <include>dijit/themes/nihilo/nihilo.css</include>
                            <include>dijit/themes/nihilo/images/treeExpand_loading.gif</include>
                            <include>dijit/themes/nihilo/images/tabContainerSprite.gif</include>
                            <include>dijit/themes/nihilo/images/spriteRoundedIconsSmall.png</include>
                            <include>dijit/themes/nihilo/images/titleBar.png</include>
                            <include>dijit/themes/nihilo/images/spriteCheckbox.gif</include>
                            <include>dijit/themes/nihilo/images/buttonEnabled.png</include>
                            <include>dijit/themes/nihilo/images/buttonActive.png</include>
                            <include>dijit/themes/nihilo/images/spriteArrows.png</include>
                            <include>dijit/themes/nihilo/images/validationInputBg.png</include>
                            <include>dijit/themes/nihilo/images/accordionItemActive.png</include>
                            <include>dijit/themes/nihilo/images/warning.png</include>
                            <include>dojox/widget/Standby/images/loading.gif</include>
                            <include>dojo/resources/blank.gif</include>
                            <include>dojo/resources/dojo.css</include>
                            <include>dijit/themes/nihilo/images/spriteDivIcons.gif</include>
                            <include>dijit/themes/nihilo/images/buttonHover.png</include>
                            <include>dijit/themes/nihilo/images/spriteTree.gif</include>
                            <include>dijit/themes/nihilo/images/treeHover.png</include>
                            <include>dijit/themes/nihilo/images/treeI.gif</include>
                            <include>dijit/themes/nihilo/images/treeI_half.gif</include>
                        </resrouce>
                    </webResources>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.9.1</version>
                <configuration>
                    <aggregate>true</aggregate>
                    <detectLinks />
                    <links>
                        <link>http://download.oracle.com/javase/1.7.0/docs/api/</link>
                        <link>http://java.sun.com/products/servlet/2.5/javadoc</link>
                        <link>http://www.snmp4j.org/doc</link>
                        <link>http://rrd4j.googlecode.com/git/javadoc/</link>
                        <link>http://junit.org/javadoc/4.11/</link>
                        <link>http://jetty.codehaus.org/jetty/jetty-6/apidocs/</link>
                        <link>http://ws.apache.org/xmlrpc/apidocs</link>
                        <link>http://www.json.org/javadoc/</link>
                        <link>http://logging.apache.org/log4j/1.2/apidocs/</link>
                        <link>http://commons.apache.org/proper/commons-net/javadocs/api-3.3/</link>
                        <link>http://commons.apache.org/fileupload/apidocs/</link>
                        <link>http://hc.apache.org/httpcomponents-client-ga/httpclient/apidocs/</link>
                        <link>http://hc.apache.org/httpcomponents-core-ga/httpcore/apidocs/</link>
                    </links>
                    <bootclasspath>${sun.boot.class.path}</bootclasspath>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.6.3.201306030806</version>
                <configuration>
                    <destfile>${basedir}/target/coverage-reports/jacoco-unit.exec</destfile>
                    <datafile>${basedir}/target/coverage-reports/jacoco-unit.exec</datafile>
                </configuration>
                <executions>
                    <execution>
                        <id>jacoco-initialize</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>jacoco-site</id>
                        <phase>package</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>